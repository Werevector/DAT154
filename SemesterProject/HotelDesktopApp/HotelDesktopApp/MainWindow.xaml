<Window x:Class="HotelDesktopApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelDesktopApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="830">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="611*"/>
            <ColumnDefinition Width="181*"/>
        </Grid.ColumnDefinitions>
        <GridSplitter x:Name="gridSplitter" HorizontalAlignment="Left" Width="4" Grid.Column="1"/>
        <DataGrid x:Name="RoomGrid" Margin="10,0" VerticalAlignment="Top" Height="459"/>
        <Button x:Name="Edit" Content="Edit" Grid.Column="1" HorizontalAlignment="Left" Margin="9,424,0,0" VerticalAlignment="Top" Width="75" Click="Edit_Click"/>
        <Button x:Name="Exit" Content="Exit" Grid.Column="1" HorizontalAlignment="Left" Margin="103,424,0,0" VerticalAlignment="Top" Width="75" Click="Exit_Click"/>

    </Grid>
</Window>
